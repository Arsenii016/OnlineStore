@page
@model OnlineStore.Pages.Admin.CreateModel
@{
    ViewData["Title"] = "Добавить товар";
}

<h1>Добавить товар</h1>

<form method="post">
    <div class="form-group mb-3">
        <label>Название</label>
        <input asp-for="Product.Name" class="form-control" required />
    </div>
    <div class="form-group mb-3">
        <label>Описание</label>
        <textarea asp-for="Product.Description" class="form-control"></textarea>
    </div>
    <div class="form-group mb-3">
        <label>Цена</label>
        <input asp-for="Product.Price" class="form-control" type="number" step="0.01" required />
    </div>
    <div class="form-group mb-3">
        <label>На складе</label>
        <input asp-for="Product.Stock" class="form-control" type="number" required />
    </div>
    <div class="form-group mb-3">
        <label>Изображение URL</label>
        <input asp-for="Product.ImageUrl" class="form-control" placeholder="/images/my-product.jpg" />
    </div>
    <div class="form-group mb-3">
        <label>Категория</label>
        <select asp-for="Product.CategoryId" class="form-control">
            <option value="">-- Выберите --</option>
            @foreach (var cat in Model.Categories)
            {
                <option value="@cat.Id">@cat.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-success">Сохранить</button>
    <a asp-page="./Index" class="btn btn-secondary">Отмена</a>
</form>