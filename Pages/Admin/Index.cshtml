@page
@model OnlineStore.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Панель администратора";
}

<h1 class="mb-4">Управление товарами</h1>

<p>
    <a asp-page="/Admin/Create" class="btn btn-success">Добавить товар</a>
</p>

@if (!Model.Products.Any())
{
    <p>Товаров нет.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Фото</th>
                <th>Название</th>
                <th>Описание</th>
                <th>Категория</th>
                <th>Цена</th>
                <th>На складе</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>
                        <img src="@(string.IsNullOrEmpty(product.ImageUrl) ? "/images/placeholder-product.jpg" : product.ImageUrl)" 
                             alt="@product.Name" style="width:80px; height:80px; object-fit:cover;" />
                    </td>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@(product.Category?.Name ?? "Без категории")</td>
                    <td>@product.Price.ToString("F2") ₽</td>
                    <td>@product.Stock</td>
                    <td>
                        <a asp-page="/Admin/Edit" asp-route-id="@product.Id" class="btn btn-sm btn-primary">Редактировать</a>
                        <form method="post" asp-page-handler="Delete" class="d-inline">
                            <input type="hidden" name="id" value="@product.Id" />
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Удалить товар?')">Удалить</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}