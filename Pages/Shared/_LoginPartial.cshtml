@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link text-dark">Привет, @User.Identity?.Name!</span>
        </li>

        @if (User.Identity?.Name == "admin@store.com" || User.IsInRole("Admin"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-page="/Admin/Index">Админка</a>
            </li>
        }

        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Account/Profile">Личный кабинет</a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Cart/Index">Корзина</a>
        </li>

        <li class="nav-item">
            <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                <button type="submit" class="nav-link btn btn-link text-dark p-0 border-0">Выйти</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Войти</a>
        </li>
    }
</ul>